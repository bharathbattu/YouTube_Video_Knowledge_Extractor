# Environment Variables
# Copy this file to .env.local and fill in your values

# ===== Required =====

# OpenRouter API Key (https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===== Optional =====

# OpenRouter Model (defaults to meta-llama/llama-3.3-70b-instruct:free)
# See available models: https://openrouter.ai/models
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free

# Deepgram API Key (https://console.deepgram.com/)
# Required only if transcripts are not available for videos
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ===== Rate Limiting (Optional) =====
# Required for production rate limiting
# Get these from https://console.upstash.com/

UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# ===== App Configuration =====

# Public URL for OpenGraph and sharing features
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development
